{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "style":{
        "useBlockStatements":"warn",
        "useShorthandArrayType":"warn"
      },
      "nursery":{
        "useExhaustiveDependencies":"error"
      }
    }
  },
  "formatter":{
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80,
    "ignore": []
  },
  "javascript":{
    "formatter":{
      "trailingComma": "es5"
    }
  }
}
